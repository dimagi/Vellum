{
    "browser": true,

    "asi": false,
    "bitwise": true,
    "boss": false,
    "eqeqeq": true,
    "evil": false,
    "forin": false,
    "immed": true,
/*  latedef apparently didn't work properly past jshint 2.8.0
    see https://github.com/jshint/jshint/issues/2833
    after an upgrade uncommenting this will throw a slew of errors which are hard
    to untagle due to built in cyclic dependencies on veriables which cause the
    tests to fail.
    "latedef": "nofunc", */
    "laxbreak": false,
    "loopfunc": true,
    "noarg": true,
    "nonew": true,
    "undef": true,
    "unused": "vars",
    "globals": {
        "define": false,
        "gettext": false,
        "ngettext": false
    }
}
